<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="SushiApp.Views.TroublePage"
             Title="Неполадки">
    <ContentPage.Content>
        <StackLayout Padding="10,40,10,20" Orientation="Vertical" Spacing="20">
            <Label Text="Что делать, если возникли технические неполадки?" Font="25" FontAttributes="Bold" TextColor="White" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Не бойтесь, проблемы временные :)" FontAttributes="Italic" TextColor="White" Font="18" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Вы можете воспользоваться сайтом http://great-sushi.ru/ для заказа суши." TextColor="White" Font="18" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Также позвоните по этому номеру и узнайте, в чем причина неполадок: " TextColor="White" Font="18" HorizontalOptions="CenterAndExpand"/>
            <Label Text="8 (499) 667-50-02." TextColor="White" Font="18" HorizontalOptions="CenterAndExpand"/>
            <Label Text="Приносим извинения за предоставленные неудобства!" TextColor="White" Font="20" HorizontalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
